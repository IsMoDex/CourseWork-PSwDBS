<Page x:Class="CourseWork_PSwDBS_Pankov.OperationPages.TablePages.dataOP_urban_areas_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork_PSwDBS_Pankov.OperationPages.TablePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="dataOP_urban_areas_Page">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Название района:"/>
        <TextBox x:Name="NameUrbanAreaTextBox" Grid.Row="1"/>

        <Label Grid.Row="2" Content="Город:"/>
        <ComboBox x:Name="CityComboBox" Grid.Row="3"/>

    </Grid>
</Page>
